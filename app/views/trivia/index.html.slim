- model_class = Trivium

.row
  .col-10
    = render TriviaHomeBannerComponent.new @current_trivium, current_team

  .col.pt-2
    = link_to 'Play', current_play_path, class: 'btn btn-primary btn-block' if @current_trivium.active?
    = link_to 'Join', teams_path, class: 'btn btn-primary btn-block' unless current_team
    = link_to 'Contribute', trivium_contribution_path, class: 'btn btn-primary btn-block'

.row
  .col
    .card
      .card-body
        h3.card-title Past Games
        .card-text
          table.table.table-hover.mb-0
            tbody
              - @trivia.each do |trivium|
                tr
                  td= trivium.title
                  td= trivium.body
                  td= l trivium.game_ends_at, format: :long
                  td.text-right
                    .btn-group role="group" aria-label="Past Trivia options"
                      = link_to 'Team Chat', play_team_trivium_path(current_team, trivium), class: "btn btn-sm btn-warning" if current_team.present?
                      = link_to 'Reveal', reveal_trivium_path(trivium), class: "btn btn-sm btn-info"

              - if @trivia.empty?
                .alert.alert-warning.mb-0
                  | No Trivia have been played yet.
.row.mt-4
  .col= pagy_bootstrap_nav(@pagy).html_safe if @trivia.present?
